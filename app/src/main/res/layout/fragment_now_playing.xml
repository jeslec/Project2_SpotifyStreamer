<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/NowPlaying_artistName"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/NowPlaying_trackName"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/noimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/NowPlaying_albumName"
        android:layout_gravity="center_horizontal"/>

   <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView4"
        android:layout_gravity="right"/>-->

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:gravity="center_horizontal">

       <ImageButton
           android:layout_width="75dp"
           android:layout_height="75dp"
           android:id="@+id/NowPlaying_buttonPrevious"
           android:background="@android:drawable/ic_media_previous"/>

       <ImageButton
           android:layout_width="75dp"
           android:layout_height="75dp"
           android:id="@+id/NowPlaying_buttonPlay"
           android:background="@android:drawable/ic_media_play"/>

       <ImageButton
           android:layout_width="75dp"
           android:layout_height="75dp"
           android:id="@+id/NowPlaying_buttonNext"
           android:background="@android:drawable/ic_media_next"/>

   </LinearLayout>

</LinearLayout>