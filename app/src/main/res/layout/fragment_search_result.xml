<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                tools:context="com.lecomte.jessy.spotifystreamerstage1v3.views.fragments.ArtistSearchFragment"
                style="@style/CustomFrameLayout">

    <!-- To change the divider color, we also need to set the divider height, see this link:
    http://stackoverflow.com/questions/2372415/how-to-change-color-of-android-listview-separator-line#2372661
    There is a debate over using 1px or 1dp as the divider height, I've opted for 1dp -->
    <ListView
        android:id="@android:id/list"
        style="@style/CustomListView"/>

    <TextView
        android:id="@android:id/empty"
        style="@style/EmptyListViewMessage"
        android:text="@string/ArtistSearch_emptyList"/>

    <ProgressBar
        android:id="@+id/SearchResult_progressBar"
        style="@style/MyProgressBar"/>

</RelativeLayout>