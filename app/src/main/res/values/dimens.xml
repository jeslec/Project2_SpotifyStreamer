<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <!-- Offset settings used by all toasts -->
    <dimen name="toast_offset_x">0dp</dimen>
    <dimen name="toast_offset_y">0dp</dimen>

    <!-- Size of the action bar title -->
    <dimen name="action_bar_title_size">22sp</dimen>/>

    <!-- Size of the action bar subtitle -->
    <dimen name="action_bar_subtitle_size">16sp</dimen>/>

    <!-- Size of the list view text message when list is empty -->
    <dimen name="empty_listview_textsize">22sp</dimen>

    <!-- Padding on the left side of list view items -->
    <dimen name="listview_item_padding_left">12dp</dimen>

    <!-- Size of the title of each list item -->
    <dimen name="listview_item_title_textsize">20sp</dimen>

    <!-- Size of the subtitle of each list item -->
    <dimen name="listview_item_subtitle_textsize">13sp</dimen>

    <!-- Padding for the horizontal layout of each listview item -->
    <dimen name="listview_item_layout_padding_left">10dp</dimen>
    <dimen name="listview_item_layout_padding_bottom">10dp</dimen>
    <dimen name="listview_item_layout_padding_top">10dp</dimen>

    <!-- Player notification -->
    <dimen name="notification_icon_width_height">85dp</dimen>
    <dimen name="notification_play_button_left_right_margin">15dp</dimen>
    <dimen name="notification_texviews_layout_paddingLeft">5dp</dimen>

    <!-- Size of music player window expressed as fraction (0.0-1.0) of max screen width -->
    <item name="dialog_window_width" format="float" type="dimen">0.85</item>
    <item name="dialog_window_height" format="float" type="dimen">0.5</item>

    <!-- Number of milliseconds from track end at which point we consider track finished -->
    <item name="track_end_threshold" format="integer" type="dimen">500</item>

    <!-- Behind music player dim amount [0.0: no dimming; 1.0: full dimming] -->
    <item name="dim_behind_dialog_amount" format="float" type="dimen">0.6</item>

</resources>
