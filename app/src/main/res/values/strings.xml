<resources>
    <string name="app_name">Spotify Streamer Stage 1</string>
    <string name="action_settings">Settings</string>

    <string name="search_hint">Search artists</string>
    <string name="action_search">Search</string>

    <!-- Artist search related messages -->

    <!-- Displayed when the artist result list is empty (no search has been done) -->
    <string name="fragment_search_result_empty_list">Tap the search icon to find your favorite artists&#8230;</string>

    <!-- Toast message when a artist search yields no result -->
    <string name="no_artist_found">No artist found, please try again</string>

    <!-- Artist popularity displayed for each item in artist results list
     (must use 2 consecutive % signs in order to see a single % symbol) -->
    <string name="artist_popularity">[Popularity: %1$s%%]</string>

    <!-- Toast message when Internet is disabled -->
    <string name="no_internet_no_search">No internet connection, search disabled</string>

    <!-- Top tracks related messages -->

    <!-- Title of the top tracks activity -->
    <string name="title_activity_top_tracks">Top Tracks</string>

    <!-- Toast message when there is no top tracks for an artist -->
    <string name="no_track_found">Sorry, no top tracks found for this artist</string>

    <!-- Temporary message that says which track is now playing -->
    <string name="track_playing">Playing: %1$s From: %2$s</string>

    <!-- Empty top tracks list message (when an artist has no top tracks) -->
    <string name="fragment_top_tracks_empty_list">This artist has no top tracks, please go back to
        the previous screen and select another artist&#8230;</string>

    <!-- Toast message when Internet is disabled -->
    <string name="no_internet_no_tracks">No internet connection, can\'t get tracks</string>

</resources>
