<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="preferences_country"
        android:title="@string/preferences_countryTitle"
        android:dialogTitle="@string/preferences_countryDialogTitle"
        android:summary="@string/preferences_countrySummary"
        android:entries="@array/preferences_countryEntries"
        android:entryValues="@array/preferences_countryValues"
        android:defaultValue="@string/preferences_countryDefaultValue" />

    <CheckBoxPreference
        android:key="preferences_notificationsEnabled"
        android:title="Notifications"
        android:summary="Notification drawer and lock screen"
        android:defaultValue="true"/>

</PreferenceScreen>